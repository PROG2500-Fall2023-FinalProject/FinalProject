<Page x:Class="FinalProject.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Page.Resources>
        
    </Page.Resources>

    <StackPanel Style="{StaticResource HomePanel}">
        <TextBlock Style="{StaticResource HomeHeader}"
               Text="Welcome to IMBD!"/>
        <TextBlock Style="{StaticResource HomeSubHeader}"
               Text="One stop for three options!"/>
        <TextBlock Style="{StaticResource HomeBody}"
               Text="Yes, the 'bd' was intentional."/>
    </StackPanel>
</Page>
